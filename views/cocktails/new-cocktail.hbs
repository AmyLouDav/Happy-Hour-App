<div class='container has-text-centered'>
	<h1 class='title is-1'>Add a cocktail</h1>
</div>

<div class='section is-centered'>
	<form
		action='/cocktail/new'
		method='POST'
		class='column is-4 is-centered has-text-centered'
		style='margin: auto'
	>

		<div class='field'>
			<label class='label'>Cocktail Name:</label>

			<div class='control'>
				<input class='input' type='text' name='name' required />
			</div>
        </div>

        <div class='field'>
			<label class='label'>Alcoholic?</label>

			<div class='control'>
                <select name="Alcoholic?">
                    <option selected disabled value="">Select an option..</option>
                    <option value="Alcoholic"</option>
                     <option value="Non-Alcoholic"</option>
                </select>
			</div>
		</div>

        <div class='field'>
			<label class='label'>Glass Type</label>

			<div class='control'>
                <select name="Glass Type?">
                    <option selected disabled value="">Select an option..</option>
                    <option value="Martini Glass"</option>
                    <option value="Snifter"</option>
                    <option value="Highball"</option>
                    <option value="Margarita Glass"</option>
                    <option value="Champagne Glass"</option>
                    <option value="Coupe"</option>
                    <option value="Wine Glass"</option>
                    <option value="Tumbler"</option>
                </select>
			</div>
		</div>

        <div class='field'>
			<label class='label'>Ingredients and Measures:</label>

			<div class='control'>
				<input class='input' type='text' name='name' required />
			</div>
		</div>


		<div class='field'>
			<label class='label'>Instructions:</label>

			<div class='control'>
				<input class='input' type='text' name='description' required />
			</div>
		</div>

		<div class='field'>
			<label class='label'>Owner:</label>

			<div class='control'>
                <select name="owner">
                    <option selected disabled value="">Select a owner..</option>
                    {{#each users}}
                    <option value="{{_id}}">{{ username }}</option>
                    {{/each}}
                </select>
			</div>
		</div>

		{{! <div class='field'>
			<label class='label'>Image:</label>

			<div class='control'>
				<input class='input' type='file' name='imageUrl' required />
			</div>

		</div> }}

		{{! <div
			class='file is-centered is-boxed is-success has-name'
			style='margin: 25px 0'
		>
			<label class='file-label'>
				<input class='file-input' type='file' name='imageUrl' />
				<span class='file-cta'>
					<span class='file-icon'>
						<i class='fas fa-upload'></i>
					</span>
					<span class='file-label'>
						Choose an image
					</span>
				</span>
				<span class='file-name'>
					Image must be 16x9 resolution
				</span>
			</label>
		</div>}}

		<button class='button is-rounded is-danger' type='submit'>Create</button>
	</form>

</div>

{{#if errorMessage}}
	<p>{{errorMessage}}</p>
{{/if}}